<% layout('layouts/boilerplate') %> 
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST"> <!-- Sending a PUT request from a form using method override -->
        <div>
            <label for="title">Title</label>
            <!-- name field is used to group content together in the post request -->
            <input type="text" id="title" name="campground[title]" value="<%=campground.title%>"> 
        </div>
        <div>
            <label for="location">Location</label>
            <!-- name field is used to group content together in the post request -->
            <input type="text" id="location" name="campground[location]" value="<%=campground.location%>"> 
        </div>
        <button>Edit Campground</button>
    </form>
    <footer>
        <a href="/campgrounds/<%= campground._id%>">All Campgrounds</a>
    </footer>